[core]
        excludesfile = ~/dotfiles/git/gitignore
        attributesfile = ~/dotfiles/git/gitattributes
        pager = delta --theme=ansi-dark
        ignorecase = false

[interactive]
        diffFilter = delta  --theme=ansi-light --color-only

[user]
        name = l5x
        email = 189198+l5x@users.noreply.github.com
        signingkey = 0x8B6DD9F259DEF16A

[init]
        templateDir = ~/dotfiles/git/template/

[push]
        default = simple
        followTags = true

[credential]
        helper = cache --timeout=36000

[color]
        ui = always

[color "branch"]
        current = yellow reverse
        local = yellow
        remote = green

[color "diff"]
        meta = yellow bold
        frag = magenta bold
        old = red bold
        new = green bold

[color "status"]
        added = yellow
        changed = green
        untracked = cyan

[status]
        relativePaths = true

[url "git@github.com:"]
        insteadOf = "gh:"
        insteadOf = "git://github.com"
        pushInsteadOf = "github:"
        pushInsteadOf = "git://github.com/"
        pushInsteadOf = "https://github.com/"

[url "git@gist.github.com:"]
        insteadOf = "gst:"
        pushInsteadOf = "gist:"
        pushInsteadOf = "git://gist.github.com/"
        pushInsteadOf = "https://gist.github.com/"

[alias]
        t = grep -iEI "TODO|FIXME"
        co = checkout
        who = "!sh -c 'git log -i -1 --pretty=\"format:%an <%ae>\n\" --author=\"$1\"' -"
        wip = !git add -u && git commit --no-verify -m "WIP"
        save = !git add -A && git commit  --no-verify -m 'SAVEPOINT'
        undo = reset HEAD~1 --mixed
        amend = commit -a --amend

[gpg]
        program = gpg2

[pull]
        rebase = true
