#!/usr/bin/env bash
BLURTYPE="18x8" # 2.90s
IMAGE="/tmp/lockscreen.png"
LOCKSCREEN="i3lock"
scrot "${IMAGE}"

    convert "${IMAGE}" \
        -level 0%,95%,0.4                 \
        -blur "${BLURTYPE}"               \
        -colorize 50% -matte "${IMAGE}"

if [ -f "${IMAGE}" ]
then
    "${LOCKSCREEN}" -u  -i "${IMAGE}"
    rm "${IMAGE}"
fi
