# Quit bspwm
super + shift + q
    bspc quit && pkill -x polybar

# close and kill
super + {_,shift + }w
    bspc node -{c,k}

# make sxhkd reload its configuration files:
super + Escape
    pkill -USR1 -x sxhkd

## Cycle the windows west/left.
super + r
    bspc node @/ -R 90 

## Toggle last focused windows or workspace/desktop back-and-forth (ยง,tab)
super + {_,shift +}{Tab}
    bspc {node,desktop} -f last

alt + {_,shift +}{Tab}
    rofi -modi "window" -show window
    # bspc {node,desktop} -f last

# if the current node is automatic, send it to the last manual, otherwise pull the last leaf
super + y
    bspc query -N -n focused.automatic && bspc node -n last.!automatic || bspc node last.leaf -n focused

# swap the current node and the biggest node
super + g
    bspc node -s biggest

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
    bspc node -{f,s} {west,south,north,east}

# alternate between the tiled and monocle layout
super + m
    bspc desktop -l next

# focus the older or newer node in the focus history
super + {o,i}
        bspc wm -h off; \
        bspc node {older,newer} -f; \
        bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
        bspc {desktop -f,node -d} '^{1-9,10}'

# # focus the node for the given path jump
# super + {p,b,comma,period}
#         bspc node -f @{parent,brother,first,second}

# focus the next/previous node
super + {_,shift + }c
        bspc node -f {next,prev}

# toggle floating
super + f
    if [ -z "$(bspc query -N -n focused.floating)" ]; then \
        bspc node focused -t floating; \
    else \
        bspc node focused -t tiled; \
    fi

#
# wm independent hotkeys
#

super + Return
    urxvt

# screenshot

super + shift + space
    scrot -z -m -d 3 -q 100 -e 'mv $f /tmp/ & sxiv /tmp/$f'

super + q
    ~/dotfiles/x/bin/lock

super + space
    rofi -modi "run" -show run

# alt + tab
#     rofi -modi "window" -show window

super + shift + f
    feh --bg-fill --randomize "${HOME}"/Downloads/wallpaper/*

super + F6
    brightness down

super + F7
    brightness up

super + F8
    volume mute

super + F9
    volume down

super + F10
    volume up
