#!/usr/bin/env bash

# @description build sxhkd X hotkey daemon
#
# @import console/info
# @dependency git

main () {
    strict  true
    verbose true

    if [[ -d "${HOME}/.sxhkd-dist" ]]
    then
        rm -rf "${HOME}/.sxhkd-dist"
    fi 

    mkdir -p "${HOME}/.sxhkd-dist/build"

    git clone --depth 1 https://github.com/baskerville/sxhkd.git  "${HOME}/.sxhkd-dist/build"

    cd "${HOME}/.sxhkd-dist/build" || exit
    git fetch origin refs/tags/0.5.6
    git reset --hard FETCH_HEAD

    PREFIX="${HOME}/.sxhkd-dist" make -j 2
    PREFIX="${HOME}/.sxhkd-dist" make install

    _ info "Done."
}

onExit () {
    _ info "Removing temporary files and directories."

    if [[ -d "${HOME}/.sxhkd-dist/build" ]]
    then
        rm -rf "${HOME}/.sxhkd-dist/build"
    fi 
}
